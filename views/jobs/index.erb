<h2>Employment Record</h2>
<a href="/jobs/new">Add New Employment Record</a>

<br/>
<table>
  <tr>
    <th>Edit</th>
    <th>Job ID</th>
    <th>Student</th>
    <th>Company</th>
    <th>Type</th>
    <th></th>
  </tr>
  <% for job in @jobs %>
  <tr>
    <td><a href="/jobs/<%= job.id %>/edit">Edit</a></td>
    <td><%= job.id %></td>
    <td><a href="/students/<%= job.student.id %>"><%= job.student.name %></a></td>
    <td><a href="/companies/<%= job.company.id %>"><%= job.company.name %></a></td>
    <td><a href="/types/<%= job.type.id %>"><%= job.type.type %></a></td>
    <td>
      <form method="post" action="/jobs/<%= job.id %>/delete">
        <input type="submit" value="delete"></input>
      </form>
    </td>
  </tr>
  <% end %>
</table>