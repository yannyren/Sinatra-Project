<h2>Company List</h2>
<a href="/companies/new">Add New Company</a>

<br/>
<table>
  <tr>
    <th>Company ID</th>
    <th>Name</th>
    <th>Location</th>
  </tr>

  <% for company in @companies %>
  <tr>
    <td><%= company.id %></td>
    <td><%= company.name %></td>
    <td><%= company.location %></td>
  </tr>
 <% end %>
 </table>