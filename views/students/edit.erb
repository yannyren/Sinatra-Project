<h2>Student Detail</h2>

<form method="post" action="/students/<%= @student.id %>">
<div>
  <div>
    <label for="Name">Name</label>
    <input type="text" name="name" id="Name" value="<%= @student.name %>"/>
  </div>

  <div>
    <label for="Gender">Gender</label>
    <input type="text" name="gender" id="Gender" value="<%= @student.gender %>">
  </div>

  <div>
    <label for="Cohort">Cohort</label>
    <input type="text" name="cohort" id="Cohort" value="<%= @student.cohort %>">
  </div>

  <div>
    <label for="Graduation_date">Graduation Date</label>
    <input type="date" name="graduation_date" id="Graduation_date">
  </div>

  <div>
    <label for="Company ID">Company Name</label>
    <select name="company_id" id="Company ID">
    <% @companies.each do |company|%>
    <option value=<%= @student.company %> <%= "selected" if company.id == @student.company_id %>>
      <%= company.name %>
    </option>
    <% end %>
  </div>

  <div>
    <input type="submit" value="Edit"/>
  </div>

</div>




