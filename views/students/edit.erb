<h2>Student Detail</h2>

<div>
  <% if @student.picture %>
    <img src="<%= settings.image_path + '/' + @student.picture %>" alt="<%= @student.name %>">
  <% end %>
</div>

<form method="post" action="/students/<%= @student.id %>" enctype="multipart/form-data">
<div>
  <div>
    <label for="Name">Name</label>
    <input type="text" name="name" id="Name" value="<%= @student.name %>"/>
  </div>

  <div>
    <label for="Gender">Gender</label>
    <input type="text" name="gender" id="Gender" value="<%= @student.gender %>">
  </div>

  <div>
    <label for="Cohort">Cohort</label>
    <input type="text" name="cohort" id="Cohort" value="<%= @student.cohort %>">
  </div>

  <div>
    <label for="Graduation_date">Graduation Date</label>
    <input type="date" name="graduation_date" id="Graduation_date" value="<%= @student.graduation_date %>">
  </div>

  <div>
    <label for="Picture">Picture</label>
    <input type="file" id="picture" name="picture" value="<%= @student.picture %>">
  </div>

  <div>
    <input type="submit" value="Submit"/>
  </div>

</div>




