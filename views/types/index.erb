<h2>Job Types</h2>

<a href="/types/new">Add New Job Type</a>

<table>
  <tr>
    <th>ID</th>
    <th>Job Type</th>
    <th>Job Description</th>
    <th></th>
  </tr>
  <% for type in @types %>
  <tr>
    <td><%= type.id %></td>
    <td><a href="/types/<%= type.id %>"><%= type.type %></a></td>
    <td>
      <form method="post" action="/types/<%= type.id %>">
        <input type="hidden" name="_method" value="delete" />
        <button>Delete</button> 
      </form>
    </td>
  </tr>
  <% end %>


</table>



